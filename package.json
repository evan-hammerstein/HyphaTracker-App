{
  "name": "hyphatracker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build:analysis": "\".venv/bin/python\" -m PyInstaller FINAL.py --name hyphatracker-analysis --noconfirm --clean --onefile --distpath python_dist --workpath python_build --specpath python_build --collect-all numpy --collect-all tifffile --collect-all cv2 --collect-all skimage --collect-all scipy --collect-all matplotlib",
    "prepack": "npm run build:analysis",
    "predist": "npm run build:analysis",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "python-shell": "^5.0.0",
    "tiff": "^6.1.1"
  },
  "build": {
    "appId": "com.hyphatracker.app",
    "productName": "HyphaTracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer{,/**}",
      "html{,/**}",
      "css{,/**}",
      "linkers{,/**}",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python_dist/hyphatracker-analysis",
        "to": "analysis/hyphatracker-analysis"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
